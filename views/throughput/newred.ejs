						<% if (division === 'Cabs') { %>
							<label for="area">Build Faults</label>
						<% } else { %>
							<label for="area">Functional Faults</label>
						<% } %>
						<select class="form-control" type="text" name="throughput[functional]"  autocomplete="off" required>
							<option></option>
