							<option>19</option>
							<option>20</option>
						</select>
						
					</div>

					<div class="col">
						<label for="notes">Faults Detail</label>
							<textarea style="height:390px; margin-bottom: 25px;" class="form-control" name="throughput[faults]"></textarea>

							<div class="form-group text-center">
								<button class="btn btn-lg btn-success btn-block ">Submit</button>
							</div>
