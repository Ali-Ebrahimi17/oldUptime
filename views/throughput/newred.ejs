						<% }) %>

					</select>


					<label for="area">Building</label>
					<select class="form-control" type="text" name="throughput[building]"  autocomplete="off" required>
						<option></option>
						<option>CFC</option>
						<option>PDI</option>
						<option>SIP 2</option>
					</select>

						<label for="area">T Card Fails</label>
