						</select>

						<% if (division === 'Cabs') { %>
							<label for="area">Shortages</label>
						<% } else { %>
							<label for="area">Cosmetic Faults</label>
						<% } %>
						<select class="form-control" type="text" name="throughput[cosmetic]"  autocomplete="off" required>
							<option></option>
							<option>0</option>
