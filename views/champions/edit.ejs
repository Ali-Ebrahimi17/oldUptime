<% layout('layouts/boilerplate')%>

<div id="newbuild-container">


  <div class="row form-background">

    <div class="col-md-12 text-center">
      <h1 style="color: white;">Edit Champion</h1>
    </div>



    <div class="col">
      <form action="/champion/edit/<%= champion._id %>" method="POST">
        <input type="hidden" name="champion[division]" value="<%= division %>">
        <label for="buildNumber">Name</label>
        <input class="form-control" type="text" name="champion[name]" value="<%= champion.name %>" required>

        <div class="form-group text-center">
          <button class="btn btn-md btn-success" style="margin: 5px;">Save</button>
        </div>
      </form>
    </div>
  </div>
  <form class="delete-form" action="champion/remove/<%= champion._id %>?_method=DELETE" method="POST">
    <button class="btn btn-danger" style="margin-top: .5rem; float: right;"><i class="far fa-trash-alt"></i> Delete</button>
  </form>
  <div">
    <a href="/champion/all/<%= division %>">Go Back</a>
</div>