<% layout('layouts/boilerplate')%>

<div id="reallocation-container">


  <div class="row form-background">

    <div class="col-lg-12 text-center">
      <h1>Update Faults</h1>
    </div>

    <div class="col">
      <form action="/graveyard/edit/<%= graveyard._id %>" method="POST">

        <label for="buildNumber">Full Build Number</label>
        <input class="form-control" type="text" name="graveyard[buildNumber]" value="<%= graveyard.buildNumber %>" disabled>
        <input type="hidden" name="division" value="<%= division %>">


        <label for="responsible">Responsible</label>
        <input class="form-control" type="text" name="graveyard[responsible]" value="<%= graveyard.responsible %>" required>

        <label for="area">Plan Fix Date</label>
        <input class="form-control" type="text" name="graveyard[planFixDate]" value="<%=  moment(graveyard.planFixDate).format("DD/MM/YYYY") %>" disabled>

        <label for="responsible">Area</label>
        <input class="form-control" type="text" name="graveyard[faultArea]" value="<%= graveyard.faultArea %>">

    </div>
    <div class="col">
      <label for="faults">Faults</label>
      <textarea style="height:250px; margin-bottom: 25px;" class="form-control" name="graveyard[fault]" disabled><%= graveyard.fault %></textarea>

    </div>
    <div class="col">
      <label for="faults">Re-Work Action</label>
      <textarea style="height:180px; margin-bottom: 25px;" class="form-control" name="graveyard[reworkAction]"><%= graveyard.reworkAction %></textarea>
      <div class="form-group text-center">
        <button class="btn btn-lg btn-danger btn-block ">Update</button>
      </div>
    </div>
    </form>
  </div>

  </form>