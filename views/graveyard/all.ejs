<% layout('layouts/boilerplate')%>




<div class="vetting-body">
  <header id="vettingJumbotron">

    <h1 id="vetting-title" style="margin-top: -1rem;"><%= graveyards.length %> MACHINES IN GRAVEYARD <i class="fas fa-wrench"></i></h1>



  </header>





  <table class="table table-hover table-dark" style="font-size: 15px; height: 70vh;">
    <thead>
      <tr class="d-flex">
        <th style="width: 140px;">Build Number</th>
        <th style="width: 165px;">Added</th>
        <th style="width: 120px;">Responsible</th>
        <th style="width: 160px;">Plan Fix Date</th>
        <th style="width: 80px;">Area</th>
        <th style="width: 300px;">Faults</th>
        <th style="width: 900px;">Re-Work Action</th>

      </tr>
    </thead>
    <tbody>
      <% graveyards.forEach(graveyard => {%>
      <td style="height: 59px; width: 140px;"><a href="/graveyard/edit/<%= graveyard._id %>"><%= graveyard.buildNumber %></a></td>
      <td style="width: 165px;"> <em><%= moment(graveyard.createdAt).format("DD/MM/YYYY - HH:mm") %> <br> <%= moment(graveyard.createdAt).fromNow() %></em></td>
      <td style="width: 120px;"> <%= graveyard.responsible  %></td>
      <td style="width: 160px;"><em><%= moment(graveyard.planFixDate).format("DD/MM/YYYY") %></em></td>
      <td style="width: 80px;"> <%= graveyard.faultArea %></td>
      <td style="width: 300px;"> <%= graveyard.fault.substring(0, 200) %></td>
      <td style="width: 900px;"> <%= graveyard.reworkAction.substring(0, 200) %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>