<% layout('layouts/boilerplate')%>

<div class="container" style="margin-left: 155px; align-items: center;">
  <table class="table table-hover table-dark" style="font-size: 15px; width: 1550px; margin: auto; height: 750px; ">
    <thead>
      <tr class="d-flex">
        <!-- <th style="width: 300px;">Zone<a class="float-right" href="/zone/new/<%= division %>"> <i class="fas fa-plus"></i></a></th> -->
        <th style="width: 200px;">Zone</th>
        <th style="width: 200px;">SIP</th>
        <th style="width: 150px;">Target DPU</th>
        <th style="width: 100px;">Rec 1</th>
        <th style="width: 100px;">Rec 2</th>
        <th style="width: 100px;">Rec 3</th>
        <th style="width: 100px;">Rec 4</th>
        <th style="width: 100px;">Rec 5</th>
