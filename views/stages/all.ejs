        <th style="width: 100px;">Rec 8</th>
        <th style="width: 100px;">Rec 9</th>
        <th style="width: 100px;">Rec 10</th>


      </tr>
    </thead>
    <tbody>
      <% stages.forEach(stage => { %>
      <tr class="d-flex">
        <td style=" width: 200px"><a href="/stage/edit/<%= stage._id %>"><%= stage.name %></a></td>
        <td style=" width: 250px"><a href="/stage/edit/<%= stage._id %>"><%= stage.sip %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.target %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec1 %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec2 %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec3 %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec4 %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec5 %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec6 %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec7 %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec8 %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec9 %></a></td>
        <td style=" width: 100px; "><a href="/stage/edit/<%= stage._id %>"><%= stage.rec10 %></a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>