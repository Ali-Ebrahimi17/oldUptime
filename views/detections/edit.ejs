<% layout('layouts/boilerplate')%>

<div id="newbuild-container">


  <div class="row form-background">

    <div class="col-md-12 text-center">
      <h1 style="color: white;">Edit Detection Point</h1>
    </div>



    <div class="col">
      <form action="/detection/edit/<%= detection._id %>" method="POST">
        <input type="hidden" name="detection[division]" value="<%= division %>">
        <label for="buildNumber">Name</label>
        <input class="form-control" type="text" name="detection[name]" value="<%= detection.name %>" required>

        <div class="form-group text-center">
          <button class="btn btn-md btn-success" style="margin: 5px;">Save</button>
        </div>
      </form>
    </div>
  </div>
  <form class="delete-form" action="detection/remove/<%= detection._id %>?_method=DELETE" method="POST">
    <button class="btn btn-danger" style="margin-top: .5rem; float: right;"><i class="far fa-trash-alt"></i> Delete</button>
  </form>
  <div">
    <a href="/setection/all/<%= division %>">Go Back</a>
</div>