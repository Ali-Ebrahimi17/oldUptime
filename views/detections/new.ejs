<% layout('layouts/boilerplate')%>

<div id="newbuild-container">


  <div class="row form-background">

    <div class="col-md-12 text-center">
      <h1 style="color: white;">Add Detection Point</h1>
    </div>



    <div class="col">
      <form action="/detection/new/<%= division %>" method="POST">
        <input type="hidden" name="detection[division]" value="<%= division %>">
        <label for="buildNumber">Name</label>
        <input class="form-control" type="text" name="detection[name]" required>
        <div class="form-group text-center">
          <button class="btn bln-block btn-md btn-success" style="margin: 5px;">Save</button>
        </div>
    </div>
    </form>
  </div>
  <div>
    <a href="/detection/all/<%= division %>">Go Back</a>
  </div>