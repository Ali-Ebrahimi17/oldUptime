<% layout('layouts/boilerplate')%>



<div class="container">

  <div class="row form-background">
    <div class="col-md-12 text-center">
      <h1 style="color: white;">Uptime Login</h1>
    </div>

    <div class="container form">
      <form action="/login" method="POST" class="validated-form" novalidate>
        <div class="form-group">
          <label class="form-label" for="username">Username</label>
          <input class="form-control" type="text" id="username" name="username" autofocus required />
          <div class="valid-feedback">Looks good</div>
        </div>
        <div class="form-group">
          <label class="form-label" for="password">Password</label>
          <input class="form-control" type="password" id="password" name="password" required />
          <div class="valid-feedback">Looks good</div>
        </div>
        <div class="form-group text-center">
          <button class="btn btn-lg btn-success">Login</button>
        </div>
      </form>
      <p class="float-right"><a href="/register">Sign up now</a></p>
      <p><a href="/password_reset">Forgot password</a></p>
      <p><a href="/">Go Back</a></p>
    </div>
  </div>