<% layout('layouts/boilerplate')%>




<div class="vetting-body">
  <header id="vettingJumbotron">

    <h1 id="vetting-title" style="margin-top: -1rem;">DOA MAJOR ESCAPES</h1>

    <!-- <p><strong>The all new online tracker</p></strong> -->

    <form class="form-inline float-left" action="/doa25pt/all/<%= division %>" method="GET">
      <div class="form-group">
        <label for="search"></label>
        <input class="form-control" type="text" name="name" placeholder="Search by Serial" autocomplete="off" />
      </div>
    </form>
    <form class="form-inline float-left" style="margin-left: 5px;" action="/doa25pt/all/<%= division %>" method="GET">
      <div class="form-group">
        <label for="search"></label>
        <input class="form-control" type="text" name="twNumber" placeholder="Search by TW Number" autocomplete="off" />
      </div>
      <!-- <button class="btn btn-md btn-success"><i class="fas fa-search"></i></button> -->
    </form>
    <form class="form-inline" action="/doa25pt/all/<%= division %>" value="" method="GET" />
    <button class="btn btn-md btn-danger" style="margin-left: 5px;"><i class="fas fa-times-circle"></i></button>



  </header>





  <table class="table table-hover table-dark" style="font-size: 15px; height: 71vh;">
    <thead>
      <tr class="d-flex">
        <th style="width: 7vw;">TW Number</th>
        <th style="width: 4vw;">Score</th>
        <th style="width: 5vw;">Logged</th>
        <th style="width: 6vw;">Model</th>
        <th style="width: 8vw;">Serial Number</th>
        <th style="width: 7vw;">Build Date</th>
        <th style="width: 7vw;">Post Cut In</th>
        <th style="width: 7vw;">Was Picked Up</th>
        <th style="width: 5vw;">On Video</th>
        <th style="width: 8vw;">S.C.C</th>
        <th style="width: 5vw;">Status</th>
        <th style="width: 28vw;">Narrative</th>
      </tr>


    </thead>
    <tbody>
      <% for (let doa25pt of doa25pts) { %>
      <tr class="d-flex">
        <td style="height: 76px; width: 7vw;"><a href="/doa25pt/edit/<%=doa25pt._id%>"><%= doa25pt.twNumber %></a></td>
        <td style="width: 4vw;"> <%= doa25pt.score %></td>
        <td style="width: 5vw;"> <%= moment(doa25pt.createdAt).format("DD/MM/YYYY") %></td>
        <td style="width: 6vw;"> <%= doa25pt.model %></td>
        <td style="width: 8vw;"> <%= doa25pt.name %></td>
        <td style="width: 7vw;"> <%= doa25pt.buildDate %></td>
        <td style="width: 7vw;"> <%= doa25pt.postCutIn %></td>
        <td style="width: 7vw;"> <%= doa25pt.wasPickedUp %></td>
        <td style="width: 5vw;"> <%= doa25pt.onVideo %></td>
        <td style="width: 8vw;"> <%= doa25pt.scc %></td>
        <td style="width: 5vw;"> <%= doa25pt.status %></td>
        <td style="width: 27vw;"> <%= doa25pt.description.substring(0, 180) %>...</td>
      </tr>
      <% } %>
    </tbody>
  </table>

</div>