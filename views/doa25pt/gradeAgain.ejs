<% layout('layouts/boilerplate')%>

<div class="container">


  <div class="row form-background">

    <div class="col-md-12 text-center">
      <!-- <a class="btn btn-primary btn-sm float-left" style="margin-top: 2.5rem; height: 1.9rem; margin-left: 10px;" target="_blank" href="https://jdsportal.jcb.com/jds/web/eng/techweb/index.r">Go to Techweb</a> -->
      <a class="btn btn-primary btn-sm float-left" style="margin-top: 2.5rem; height: 1.9rem; margin-left: 10px;" target="_blank" href="https://jdsportal.jcb.com/jds/web/eng/techweb/hd/hd_view_call.w?call_id=<%= doa25pt.twNumber%>&show_call=ok">Go to Techweb</a>
      <a class="btn btn-primary btn-sm float-left" style="margin-top: 2.5rem; height: 1.9rem; margin-left: 20px;" target="_blank" href="https://internal.jcb.local/BuildLookup/?searchTerm=<%= doa25pt.name %>&searchCategory=SERIALNUMBER">Go to BQT</a>
      <h1 style="color: white; margin-top: 25px; margin-right: 140px;">Grade <%= division %> Escape</h1>
    </div>



    <div class="container form">



      <div class="col">
        <form action="/doa25pt/gradeAgain/<%= doa25pt._id %>" method="POST">
    
          <input type="hidden" name="doa25pt[count]" value="0">
          <label class="form-label" for="title">TW Number</label>
          <input class="form-control" type="text" name="doa25pt[twNumber]" value="<%= doa25pt.twNumber %>" required disabled />

          <label class="form-label" for="title">Serial Number</label>
          <input class="form-control" type="text" name="doa25pt[name]" value="<%= doa25pt.name %>" required disabled />

          <label class="form-label" for="title">Build Date</label>
          <input class="form-control" type="text" name="doa25pt[buildDate]" value="<%= moment(doa25pt.buildDate).format("DD/MM/YYYY") %>" required disabled />


          <label class="form-label" for="title">Build Date</label>
          <input class="form-control" type="text" name="doa25pt[model]" value="<%= doa25pt.model %>" required disabled />

          <label class="form-label" for="title">Business Unit</label>
          <input class="form-control" type="text" name="doa25pt[division]" value="<%= doa25pt.division %>" required />
          <span style="margin-right: 10px;"><a href="/doa25pt/newFMode1/<%= doa25pt._id %>"><i class="fas fa-plus"></i></a></span><label for="inspector" style="color: white;">Area</label>
          <label for="inspector" style="color: white;">Area</label>
          <select class="form-control" type="text" name="doa25pt[failuremode]" autocomplete="off" required>
            <option hidden><%= doa25pt.failuremode %></option>
            <% failuremodes.forEach(failuremode => { %>

            <option label="<%= failuremode.name %>" value="<%= failuremode.name %>">

              <% }) %>

          </select>
          <span style="margin-right: 10px;"><a href="/doa25pt/newFType1/<%= doa25pt._id %>"><i class="fas fa-plus"></i></a></span><label for="inspector" style="color: white;"> Failure Mode</label>
          <label for="inspector" style="color: white;">Failure Mode</label>
          <select class="form-control" type="text" name="doa25pt[failuretype]" autocomplete="off" required>
            <option hidden><%= doa25pt.failuretype %></option>
            <% failuretypes.forEach(failuretype => { %>

            <option label="<%= failuretype.name %>" value="<%= failuretype.name %>">

              <% }) %>

          </select>

          <div style="display: flex; justify-content: space-between;">

            <div style="width: 45%;">
              <label for="description">Grade</label>
              <select class="form-control" type="text" name="doa25pt[grade]" style="" autocomplete="off" required>
                <option hidden><%= doa25pt.grade %></option>
                <option>Major</option>
                <option>Minor</option>
              </select>
            </div>

            <div style="width: 45%;">
              <label for="description">Points</label>
              <select class="form-control" type="text" name="doa25pt[points]" style="margin-bottom: 12px;" autocomplete="off" required>
                <option hidden><%= doa25pt.points %></option>
                <option>5</option>
                <option>25</option>
                <option>250</option>
              </select>
            </div>

          </div>


      </div>
    </div>

    <div class="col">


      <label for="notes" style="color: white;">Description of issue</label>
      <textarea style="height: 478px; margin-bottom: 12px;" class="form-control" name="doa25pt[shortDescription]" required><%= doa25pt.shortDescription %></textarea>



      <div class="form-group ">

        <button class="btn btn-md btn-success btn-block">Submit</button>
      </div>
    </div>
    </form>
  </div>
