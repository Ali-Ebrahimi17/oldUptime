<% layout('layouts/doa')%>
<!-- <meta http-equiv="refresh" content="100"> -->
<link rel="stylesheet" href="/8z/content/bootstrap/css/bootstrap.css" type="text/css" />
<link rel="stylesheet" href="/8z/content/dashboards.css" type="text/css" />
<link rel="stylesheet" href="/8z/content/bootswatch/united.css" type="text/css" />
<link rel="stylesheet" href="/8z/content/font-awesome/css/all.css" type="text/css" />
<link rel="stylesheet" href="/8z/content/chart-js/chart.min.css" type="text/css" />
<link rel="stylesheet" href="/stylesheets/style2.css" type="text/css" />
<link rel="stylesheet" href="/stylesheets/cards2.css" type="text/css" />
<link rel="stylesheet" href="/content/table2.css" type="text/css" />
<script src="/8z/content/jquery/jquery-3.3.1.min.js"></script>

<style>
	body {
		background-color: black;
	}

	h5 {
		color: white;
		font-size: 1.5rem;
		margin-bottom: -15px;
	}

	h3 {
		color: white;
		font-size: 2rem;
	}

	h2 {
		font-weight: bold;
		color: black;
	}

	h1 {
		font-weight: bold;
		font-size: 4rem;
	}

	h6 {
		font-size: 1rem;
	}

	hr {
		background-color: #6a6d6d;
	}

	.last-checked-holder {
		padding-top: 12px;
	}

	a:hover {
		color: inherit;
	}
</style>

<div class="main-header-holder">
	<!-- <h1>PAINT PLANT HEALTH STATUS</h1> -->
</div>

<div class="outside-holder">
	<!-- HBU -->
	<div class="wrapper" style="width: 95%">
		<div class="header">
			<div class="header-text"><a href="#"><%= division %> Major Escape Closure Tracker</a></div>
		</div>

		<hr />

		<table class="table" id="table-requests" style="margin-bottom: 42px">
			<thead>
				<tr style="font-size: 15px">
					<th class="th-centre" style="height: 15px; width: 50px; border-right: 1px solid rgb(42, 44, 46)">RAISED</th>
					<th class="th-centre" style="height: 15px; width: 50pxpx; border-right: 1px solid rgb(42, 44, 46)">CLOSURE DUE</th>
					<th class="th-centre" style="width: 30px; border-right: 1px solid rgb(42, 44, 46)">MODEL</th>
					<th class="th-centre" style="width: 30px; border-right: 1px solid rgb(42, 44, 46)">SERIAL</th>
					<th class="th-centre" style="width: 5px; border-right: 1px solid rgb(42, 44, 46)">AREA</th>
					<th class="th-centre" style="width: 550px; border-right: 1px solid rgb(42, 44, 46)">ISSUE</th>
				</tr>
			</thead>
			<tbody style="color: white">
				<% for (let m of escapes) { %>

				<tr>
					<td class="td-centre" style="width: 50px">
						<a href="/claims/4cshow/<%=m._id%>"
							><%= moment(m.vettedAt).format("DD/MM/YYYY HH:mm") %> <br />
							<%= moment(m.vettedAt).fromNow()%></a
						>
					</td>
					<td class="td-centre" style="width: 2px">
						<a href="/claims/4cshow/<%=m._id%>"
							>End of Shift <br />
							<%= moment(m.vettedAt).add(6, 'days').format("DD/MM/YYYY") %></a
						>
					</td>
					<td class="td-centre" style="width: 2px"><a href="/claims/4cshow/<%=m._id%>"><%= m.model.substring(0, 7) %></a></td>
					<td class="td-centre" style="width: 2px"><a href="/claims/4cshow/<%=m._id%>"><%= m.name %></a></td>
					<td class="td-centre" style="width: 2px"><a href="/claims/4cshow/<%=m._id%>"><%= m.area %></a></td>
					<td class="td-centre" style="width: 10px; text-align: left">
						<a href="/claims/4cshow/<%=m._id%>"><%= m.description.substring(0, 175)%>...</a>
					</td>
				</tr>
				<% } %>
			</tbody>
		</table>
	</div>
</div>

<div class="container-fluid footer">
	<div class="row header-top">
		<div class="col-lg-6 d-none d-lg-block text-left" style="padding: 4px 4px 5px 4px">
			<img height="24px" src="/7z/content/images/jcb-logo.png" />
			<img height="24px" src="/7z/content/images/df.png" />
		</div>
		<div class="col-lg-6 d-lg-block text-right" style="padding: 6px 12px 5px 0px; font-weight: bold">J.C. Bamford Excavators LTD &copy; 2022</div>
	</div>
</div>
