<% layout('layouts/boilerplate')%>



<div class="container">


  <div class="row form-background">

    <div class="col-md-12 text-center">
      <h1 style="color: white;">Issue a new <%= division %> 4C</h1>
    </div>

    <div class="container form">

      <div class="col">
        <form action="/claims/4c/<%= division %>" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
          <input type="hidden" name="claim[division]" value="<%= division %>">
          <label class="form-label" for="title">Build/TW/Claim Number</label>
          <input class="form-control" type="text" id="title" name="claim[buildNumber]" required />
          <div class="valid-feedback">Looks good</div>
          <label for="area">Model</label>
          <select class="form-control" type="text" name="claim[model]" autocomplete="off" required>
            <% models.forEach(model => { %>
            <option hidden></option>
            <option label="<%= model.name %>" value="<%= model.name %>">
              <% }) %>
          </select>
          <div class="valid-feedback">Looks good</div>
          <label for="description">Area at fault</label>
          <select class="form-control" id="area" type="text" name="claim[area]" autocomplete="off" required>
            <% areas.forEach(area => { %>
            <option hidden></option>
            <option label="<%= area.name %>" value="<%= area.name %>"></option>
            <% }) %>
          </select>
          <div class="valid-feedback">Looks good</div>
          <label for="description">Where it should have been picked up</label>
          <select class="form-control mb-4" type="text" name="claim[detection]" autocomplete="off" required>
            <% detections.forEach(detection => { %>
            <option hidden></option>
            <option label="<%= detection.name %>" value="<%= detection.name %>">
              <% }) %>
          </select>
          <div class="valid-feedback">Looks good</div>
          <label for="image">Image 1</label>
          <input class="form-control" type="file" id="image1" name="image1" accept="image/*" required>
          <label for="image">Image 2</label>
          <input class="form-control" type="file" id="image2" name="image2" accept="image/*">
          <label for="image">Image 3</label>
          <input class="form-control" type="file" id="image3" name="image3" accept="image/*">
          <label for="image">Image 4</label>
          <input class="form-control" type="file" id="image4" name="image4" accept="image/*">
          <label for="image">Image 5</label>
          <input class="form-control" type="file" id="image5" name="image5" accept="image/*">
      </div>
    </div>


    <div class="col">
      <label for="notes" style="color: white;">Description of issue</label>
      <textarea style="height: 483px;" class="form-control" name="claim[description]" required></textarea>
      <div class="valid-feedback">Looks good</div>
      <div class="form-group ">
        <label for="area" style="color: white;">Grade</label>
        <select class="form-control" style="margin-bottom: 30px;" type="text" name="claim[abcd]" autocomplete="off" required>
          <option hidden></option>
          <option>A</option>
          <option>B</option>
          <option>C</option>
          <option>D</option>
        </select>
        <div class="valid-feedback">Looks good</div>
        <button class="btn btn-md btn-success btn-block">Submit</button>
      </div>
    </div>
    </form>
  </div>