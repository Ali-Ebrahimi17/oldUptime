                <% } %>
                <% if (currentUser) { %>
                <h5>Update this 4C <i class="fas fa-pencil-alt"></i></h5>
                <form id="add-comment-form" action="/claims/<%= claim._id %>/reviews" method="POST">
                  <div class="form-group">
                    <input class="form-control" type="text" disabled value="<%= currentUser.firstName %> <%= currentUser.lastName %>">
                  </div>
                  <div class="form-group">
                    <textarea class="form-control" name="review[text]" placeholder="Give as much detail as possible on containment and closure details." form="add-comment-form" rows="5" cols="70" autocomplete="off" required></textarea>
                  </div>
                  <div class="form-group">
                    <button class="btn btn-success btn-sm">Save</button>
                  </div>
                </form>
                <% } %>
              </div>
            </div>

            <% if (claim.reviews.length === 0) { %>
            <em style="color: white; margin-left: 1rem;">4C must be updated with containment details before status can be changed.</em>
            <% } %>
            <!-- display existing comments -->
            <div class="card-body">
              <% claim.reviews.forEach(function(review){ %>
              <div class="row">
                <div class="col-md-12">
                  <strong>
                    <a href="/users/<%= review.author.id %>"><%= review.author.firstName %> <%= review.author.lastName %></a>
                  </strong>
                  <span class="float-right"><%= moment(review.createdAt).format("DD/MM/YYYY - HH:mm") %></span>
                  <div><%= review.text %>
                    <!-- check if user logged in is also the author of the comment -->
                    <% if (currentUser && currentUser.isAdmin) {%>
                    <% if ( claim.status != 'Closed' || currentUser && currentUser.isAdmin) { %>
                    <form class="d-inline" id="delete-form" action="/claims/<%= claim._id %>/comments/<%= review._id %>?_method=DELETE" method="POST">
                      <button class="btn btn-danger btn-sm float-right py-0" style="margin-left: .5rem;">Delete</button>
                      <a class="btn btn-warning btn-sm float-right py-0" role="button" data-toggle="collapse" href="#collapseEdit<%= review._id %>" aria-expanded="false" aria-controls="collapse<%= review._id %>">Edit</a>
                    </form>
                    <% } %>
                    <!--Edit comment form-->
                    <!--make each id attribute unique by adding comment._id-->
                    <div class="collapse" id="collapseEdit<%= review._id %>">
                      <div class="card-body" style="margin-top: 15px;">
                        <h4><i class="fas fa-pencil-alt"></i> Edit your comment</h4>
                        <form id="edit-comment-form" action="/claims/<%= claim._id %>/comments/<%= review._id %>?_method=PUT" method="POST">
                          <div class="form-group">
                            <input class="form-control" type="text" disabled value="<%= currentUser.firstName %> <%= currentUser.lastName %>">
                          </div>
                          <div class="form-group">
                            <textarea class="form-control" name="review[text]" placeholder="Go into as much detail as possible" rows="5" cols="70" autocomplete="off"><%= comment.text %></textarea>
                          </div>
                          <div class="form-group">
                            <button class="btn btn-warning btn-sm py-0">Save</button>
                          </div>
                        </form>
                      </div>
                    </div>
                    <% } %>
                  </div>
                  <hr>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>


        <% }; %>

  </side1>

  <side2>
    <div>
      <% if( currentUser && claim.author.equals(currentUser._id)) {%>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/claims/<%=claim._id%>/edit">Edit</a>
        <form class="d-inline" action="/claims/<%=claim._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
    </div>
    <div class="col">
      <% if(currentUser){ %>
      <h2>Update 4C Notes</h2>
      <form action="/claims/<%=claim._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>

        <div class="mb-3">
          <label class="form-label" for="body"></label>
          <textarea class="form-control" name="review[body]" id="body" cols="30" rows="6" required></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
      <% } %>
      <% for(let review of claim.reviews) { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= review.author.firstName %> <%= review.author.lastName %> <%= moment(review.createdAt).format("DD/MM/YYYY - HH:mm") %></h5>
          <p class="card-text"><%= review.body %></p>
          <% if( claim.status != "Closed") {%>
          <% if( currentUser && review.author.equals(currentUser._id)) {%>
          <form action="/claims/<%=claim._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
          <% } %>
          <% } %>
        </div>
      </div>
      <% } %>

    </div>



  </side2>



</wrapper>





</body>

</html>