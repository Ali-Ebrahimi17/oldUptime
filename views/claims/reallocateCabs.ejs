<% layout('layouts/boilerplate')%>
<div class="container">

  <div class="row form-background" style="margin-left: 100px; margin-right: 100px;">

    <div class="col-md-12 text-center">
      <h1 style="color: white;">Assign to Area</h1>
    </div>


    <div class="container form">
      <form action="/claims/reallocateCabs/<%= claim._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="row" style="margin-bottom: 10px;">
          <div class="col">
            <label for="area">Area Responsible</label>
            <select class="form-control" type="text" name="claim[cabs]" autocomplete="off" required>
              <% areas.forEach(area => { %>
              <option hidden><%= claim.cabs %></option>
              <option label="<%= area.name %>" value="<%= area.name %>">
                <% }) %>
            </select>
          </div>

        </div>

        <div class="form-group text-center">
          <button class="btn btn-lg btn-success">Submit</button>
        </div>
      </form>



    </div>
  </div>