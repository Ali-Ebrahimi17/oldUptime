<% layout('layouts/boilerplate')%>

<div id="zone-container">


  <div class="row form-background">

    <div class="col-md-12 text-center">
      <h1 style="color: white;">Edit <%= zone.name %> Stats</h1>
    </div>



    <div class="col">
      <form action="/zone/edit/<%= zone._id %>" method="POST">
        <input type="hidden" name="zone[division]" value="<%= division %>">
        <label for="buildNumber">Week6</label>
        <input class="form-control" type="text" name="zone[wk6]" value="<%= zone.wk6 %>" required>
        <label for="buildNumber">Week 5</label>
        <input class="form-control" type="text" name="zone[wk5]" value="<%= zone.wk5 %>" required>
        <label for="buildNumber">Week 4</label>
        <input class="form-control" type="text" name="zone[wk4]" value="<%= zone.wk4 %>" required>
        <label for="buildNumber">Week 3</label>
        <input class="form-control" type="text" name="zone[wk3]" value="<%= zone.wk3 %>" required>
        <label for="buildNumber">Week 2</label>
        <input class="form-control" type="text" name="zone[wk2]" value="<%= zone.wk2 %>" required>
        <label for="buildNumber">Week 1</label>
        <input class="form-control" type="text" name="zone[wk1]" value="<%= zone.wk1 %>" required>
        <label for="buildNumber">Target DPU</label>
        <input class="form-control" style="margin-bottom: 25px;" type="text" name="zone[target]" value="<%= zone.target %>" required>
    </div>
    <div class="col">
      <label for="buildNumber">Last Week DPU</label>
      <input class="form-control" type="text" name="zone[lastWeekDpu]" value="<%= zone.lastWeekDpu %>" required>
      <label for="buildNumber">Graph Week 5</label>
      <input class="form-control" type="text" name="zone[dpuWeek5]" value="<%= zone.dpuWeek5 %>" required>
      <label for="buildNumber">Graph Week 4</label>
      <input class="form-control" type="text" name="zone[dpuWeek4]" value="<%= zone.dpuWeek4 %>" required>
      <label for="buildNumber">Graph Week 3</label>
      <input class="form-control" type="text" name="zone[dpuWeek3]" value="<%= zone.dpuWeek3 %>" required>
      <label for="buildNumber">Graph Week 2</label>
      <input class="form-control" type="text" name="zone[dpuWeek2]" value="<%= zone.dpuWeek2 %>" required>
      <label for="buildNumber">Graph Week 1</label>
      <input class="form-control" type="text" name="zone[dpuWeek1]" value="<%= zone.dpuWeek1 %>" required>
    </div>
    <div class="col">
      <label for="buildNumber">Issue 1</label>
      <input class="form-control" type="text" name="zone[issue1]" value="<%= zone.issue1 %>">
      <label for="buildNumber">Count</label>
      <input class="form-control" type="text" name="zone[count1]" value="<%= zone.count1 %>">
      <label for="buildNumber">Cut In</label>
      <input class="form-control" type="text" name="zone[cutIn1]" value="<%= zone.cutIn1 %>">
      <label for="buildNumber">Status</label>
      <input class="form-control" type="text" name="zone[status1]" value="<%= zone.status1 %>">
    </div>
    <div class="col">
      <label for="buildNumber">Issue 2</label>
      <input class="form-control" type="text" name="zone[issue2]" value="<%= zone.issue2 %>">
      <label for="buildNumber">Count</label>
      <input class="form-control" type="text" name="zone[count2]" value="<%= zone.count2 %>">
      <label for="buildNumber">Cut In</label>
      <input class="form-control" type="text" name="zone[cutIn2]" value="<%= zone.cutIn2 %>">
      <label for="buildNumber">Status</label>
      <input class="form-control" type="text" name="zone[status2]" value="<%= zone.status2 %>">
    </div>
    <div class="col">
      <label for="buildNumber">Issue 3</label>
      <input class="form-control" type="text" name="zone[issue3]" value="<%= zone.issue3 %>">
      <label for="buildNumber">Count</label>
      <input class="form-control" type="text" name="zone[count3]" value="<%= zone.count3 %>">
      <label for="buildNumber">Cut In</label>
      <input class="form-control" type="text" name="zone[cutIn3]" value="<%= zone.cutIn3 %>">
      <label for="buildNumber">Status</label>
      <input class="form-control" type="text" name="zone[status3]" value="<%= zone.status3 %>">
    </div>
    <div class="col">
      <label for="buildNumber">Issue 4</label>
      <input class="form-control" type="text" name="zone[issue4]" value="<%= zone.issue4 %>">
      <label for="buildNumber">Count</label>
      <input class="form-control" type="text" name="zone[count4]" value="<%= zone.count4 %>">
      <label for="buildNumber">Cut In</label>
      <input class="form-control" type="text" name="zone[cutIn4]" value="<%= zone.cutIn4 %>">
      <label for="buildNumber">Status</label>
      <input class="form-control" type="text" name="zone[status4]" value="<%= zone.status4 %>">
    </div>
    <div class="col">
      <label for="buildNumber">Issue 5</label>
      <input class="form-control" type="text" name="zone[issue5]" value="<%= zone.issue5 %>">
      <label for="buildNumber">Count</label>
      <input class="form-control" type="text" name="zone[count5]" value="<%= zone.count5 %>">
      <label for="buildNumber">Cut In</label>
      <input class="form-control" type="text" name="zone[cutIn5]" value="<%= zone.cutIn5 %>">
      <label for="buildNumber">Status</label>
      <input class="form-control" style="margin-bottom: 25px;" type="text" name="zone[status5]" value="<%= zone.status5 %>">


      <div class="form-group text-center">
        <button class="btn btn-md btn-success " style="margin: 5px;">Save</button>
      </div>
      </form>
    </div>
  </div>
