<% layout('layouts/boilerplateTCard')%>


<div class="main-tCard-container">
  <h2 class="main-title"><%= division.toUpperCase()  %> <%= area.toUpperCase()  %> CRITICAL PLANT CHECKS</h2>
  <div class="row" style="width: 100%;">
      <div class="col-lg check-row">
        <h3>Days</h3>
        <hr>
        <a href="/tCard/show/<%= division %>/<%= area %>/<%= location %>/Days">
            <div class="cards-container">
              <div class="<% if (failsDays > 0 ) { %>card-wrapper-red<% } else { %>card-wrapper-green<% } %>">
                  <div class="card-content">
                    <div>
                      <% if (failsDays > 0 ) { %>
                      <h1><%= failsDays %></h1>
                      <% } else { %>
                      <h1> <i class="fas fa-check"></i></h1>
                      <% } %>
                    </div>
                  </div>
                </div>
            </div>
        </a>
       </div>
      <div class="col-lg check-row">
        <h3>Nights</h3>
        <hr>
        <a href="/tCard/show/<%= division %>/<%= area %>/<%= location %>/Nights">
            <div class="cards-container">
              <div class="<% if (failsNights > 0 ) { %>card-wrapper-red<% } else { %>card-wrapper-green<% } %>">
                  <div class="card-content">
                    <div>
                      <% if (failsNights > 0 ) { %>
                      <h1><%= failsNights %></h1>
                      <% } else { %>
                      <h1> <i class="fas fa-check"></i></h1>
                      <% } %>
                    </div>
                  </div>
                </div>
            </div>
        </a>
       </div>
      <div class="col-lg check-row">
        <h3>4 On 4 Off</h3>
        <hr>
        <a href="/tCard/show/<%= division %>/<%= area %>/<%= location %>/4 On 4 Off">
            <div class="cards-container">
              <div class="<% if (fails4On4Off > 0 ) { %>card-wrapper-red<% } else { %>card-wrapper-green<% } %>">
                  <div class="card-content">
                    <div>
                      <% if (fails4On4Off > 0 ) { %>
                      <h1><%= fails4On4Off %></h1>
                      <% } else { %>
                      <h1> <i class="fas fa-check"></i></h1>
                      <% } %>
                    </div>
                  </div>
                </div>
            </div>
        </a>
       </div>
      
    </div>
  </div>