<% layout('layouts/boilerplate')%>

<div id="newbuild-container">


  <div class="row form-background">

    <div class="col-md-12 text-center">
      <h1 style="color: white;">Add Email</h1>
    </div>



    <div class="col">
      <form action="/area/<%= area._id %>/email" method="POST">

        <label for="buildNumber">Email</label>
